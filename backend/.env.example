# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database (Local Development - Docker)
DATABASE_URL=postgresql://fintracker_user:fintracker_password@localhost:5432/fintracker_dev

# Database (Production - Supabase) - Uncomment for production
# DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_CONNECTION_TIMEOUT=5000

# Redis (Local Development - Docker)
REDIS_URL=redis://localhost:6379

# Redis (Production - Upstash) - Uncomment for production
# REDIS_URL=rediss://default:[YOUR-PASSWORD]@[ENDPOINT].upstash.io:6379

# JWT Configuration
JWT_SECRET=local-dev-secret-change-in-production-use-openssl-rand-hex-32
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
REFRESH_TOKEN_ROTATION=true

# Encryption
ENCRYPTION_KEY=local-encryption-key-32-bytes-length-change-in-production

# Email Configuration (MailHog for local development)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@fintracker.local
EMAIL_SECURE=false

# Email (Production - Use your SMTP provider)
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASSWORD=your-password
# EMAIL_FROM=noreply@fintracker.com
# EMAIL_SECURE=true

# CORS Configuration
CORS_ORIGINS=http://localhost:5173

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=local-session-secret-change-in-production

# Feature Flags
ENABLE_EMAIL_VERIFICATION=false
ENABLE_MFA=false
ENABLE_SMS_PARSING=true

# External APIs (Optional)
# NSE_API_KEY=your-nse-api-key
# EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
# MPESA_DARAJA_CONSUMER_KEY=your-consumer-key
# MPESA_DARAJA_CONSUMER_SECRET=your-consumer-secret

# Frontend URL
FRONTEND_URL=http://localhost:5173
